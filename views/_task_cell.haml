%li.task-cell{ 'data-id': task['id'], 'data-rank': task['rank'] }
  .title= task['title']
  .description{ hidden: true }= task['description']
  .show-task
    %a{ href: '#', class: 'fa fa-eye', 'data-toggle': 'modal', 'data-target': '#bsModal' }
  .delete-task
    %a{ class: 'fa fa-trash-alt', href: '#' }

// Renders flash message in any and fades out
$('#flash_holder').show().append('<%= j haml :_flash %>').delay(2000).fadeOut(2000, function () {
    $(this).children().remove();
});

// Makes corresponding UI changes
<% if @task %>
    $('div.id:contains("<%= @task['id'] %>")').closest('li').replaceWith('<%= j haml :_task_cell, locals: { task: @task } %>');
<% end %>
